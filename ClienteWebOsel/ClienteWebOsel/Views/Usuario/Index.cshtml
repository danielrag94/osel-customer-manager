@{
    ViewBag.Title = "Ver";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinturas Osel</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Scripts/jquery-1.11.2.min.js"><\/script>')</script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</head>
<body>
    <header>
        <nav class="NavBar full">
            <div class="row">
                <div class="tittles NavBar-logo col s12 m3">Pinturas Osel</div>
                <ul class="NavBar-links col m9">
                    <li><a href="@Url.Action("Index", "Home")" class="waves-effect">Inicio</a></li>
                    <li><a href="@Url.Action("Index", "Pintura")" class="waves-effect">Pinturas</a></li>
                </ul>
                <i class="zmdi zmdi-more-vert full btn-menu hide-on-med-and-up waves-effect"></i>
            </div>
        </nav>
        <div class="row">
            <h4 class="center-align tittles">Usuarios</h4>
        </div>
    </header>
    <section>
        <div class="container">
            <a href="@Url.Action("Crear", "Usuario")">Agregar nuevo usuario</a>
            <br />
            <table cellpadding="2" cellspacing="2" border="1">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Nivel</th>
                </tr>
                @foreach (var usuario in ViewBag.listaUsuarios)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Nivel</td>
                        <td>
                            <a href="@Url.Action("Eliminar", "Usuario", new { id = usuario.Id })">Eliminar</a>
                            <a href="@Url.Action("Editar", "Usuario", new { id = usuario.Id })">Editar</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </section>
    <footer class="footer">
        <div class="col s12 tittles footer-copyright">Osel Pinturas &copy; 2017</div>
    </footer>
</body>
</html>