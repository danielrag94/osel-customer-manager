@{
    ViewBag.Title = "Pinturas";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinturas Osel</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Scripts/jquery-1.11.2.min.js"><\/script>')</script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/main.js"></script>     
</head>
<body>
    <header>
        <nav class="NavBar full">
            <div class="row">
                <div class="tittles NavBar-logo col s12 m3">Pinturas Osel</div>
                <ul class="NavBar-links col m9">
                    <li><a href="@Url.Action("Index", "Home")" class="waves-effect">Inicio</a></li>
                    <li><a href="@Url.Action("Index", "Pintura")" class="waves-effect">Pinturas</a></li>
                </ul>
                <i class="zmdi zmdi-more-vert full btn-menu hide-on-med-and-up waves-effect"></i>
            </div>
        </nav>
        <div class="row">
            <h4 class="center-align tittles">Pinturas</h4>
        </div>
    </header>	 
    <section>
        <div class="container">
            <a href="@Url.Action("Crear", "Pintura")">Agregar nuevo color</a>
            <br />
            <table cellpadding="2" cellspacing="2" border="1">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Codigo</th>
                    <th>Color</th>
                    <th>Opción</th>
                </tr>
                @foreach (var pintura in ViewBag.listaPinturas)
                {
                string color = pintura.Color.ToString();
                int numero = int.Parse(color);

                if (numero != null)
                {
                    color = "#" + numero.ToString("X");
                }
                else
                {
                    color = "white";
                }
                <tr>
                    <td>@pintura.Id</td>
                    <td>@pintura.Nombre</td>
                    <td>@pintura.Codigo</td>
                    <td style="background-color:@color"></td>
                    <td>
                        <a href="@Url.Action("Eliminar", "Pintura", new { id = pintura.Id })">Eliminar</a>
                        <a href="@Url.Action("Editar", "Pintura", new { id = pintura.Id })">Editar</a>
                    </td>
                </tr>
                }
            </table>
        </div>        
    </section>
    <footer class="footer">
        <div class="col s12 tittles footer-copyright">Osel Pinturas &copy; 2017</div>
    </footer>
</body>
</html>