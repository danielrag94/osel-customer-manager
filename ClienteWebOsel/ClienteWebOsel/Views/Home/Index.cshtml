@{
    ViewBag.Title = "Home Page";    
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinturas Osel</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Scripts/jquery-1.11.2.min.js"><\/script>')</script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</head>
<body>
    <header>
        <nav class="NavBar full">
            <div class="row">
                <div class="tittles NavBar-logo col s12 m3">Pinturas Osel</div>
                <ul class="NavBar-links col m9">
                    <li><a href="@Url.Action("Index", "Home")" class="waves-effect">Inicio</a></li>                    
                    <li><a href="@Url.Action("Index", "Pintura")" class="waves-effect">Pinturas</a></li>
                </ul>
                <i class="zmdi zmdi-more-vert full btn-menu hide-on-med-and-up waves-effect"></i>
            </div>
        </nav>
        <h4 class="center-align tittles">Bienvenido!</h4>
    </header>    
    <section>
        <div class="container">
            <div class="row">
                @foreach (var pintura in ViewBag.listaPinturas)
                {
                    string color = pintura.Color.ToString();
                    int numero = int.Parse(color);

                    if (numero != null)
                    {
                        color = "#" + numero.ToString("X");
                    }
                    else
                    {
                        color = "white";
                    }
                    <div class="col s12 m6 l4">
                        <div class="card">
                            <div class="card-image waves-effect waves-block waves-light space activator" style="background-color:@color">
                                &nbsp;
                            </div>
                            <div class="card-content">
                                <span class="card-title activator grey-text text-darken-4">@pintura.Nombre<i class="zmdi zmdi-more-vert right"></i></span>                                
                            </div>
                            <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4">@pintura.Nombre<i class="zmdi zmdi-close right"></i></span>
                                <span class="grey-text text-darken-4">@pintura.Codigo</span>                                
                            </div>
                        </div>
                    </div>
                }                               
            </div>
        </div>
    </section>
    <footer class="footer">
        <div class="col s12 tittles footer-copyright">Pinturas Osel &copy; 2017</div>        
    </footer>
</body>
</html>